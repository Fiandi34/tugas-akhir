  <body class="bg-black">

    {{! Konten }}
    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="form-submit col-md-8">
          <form method="post" action="/addkabupaten" enctype="multipart/form-data">
            <h1 class="text-center mb-4">Tambah Kabupaten</h1>
            <div class="form-group mb-3">
              <label for="inputTitle">Nama: </label>
              <input type="text" class="form-control" id="nama" name="nama" />
            </div>
            <div class="form-group mb-3">
              <label for="inputContent">Diresmikan: </label>
              <input class="form-control" id="diresmikan" rows="10" name="diresmikan"></input>
            </div>
            <div class="form-group mb-3">
              <label for="formFile" class="form-label">Upload Image</label>
              <input class="form-control" type="file" id="foto" name="foto" />
            </div>
            <input style="background-color: black; color: green;" type="submit" value="Submit" class="submit" />
          </form>
        </div>
      </div>

      <hr class="line" style="color: green; box-shadow: 0 0 50px green; border: 1px solid green" />
      <div id="project" class="blog-list" style="background-color: black;">
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
